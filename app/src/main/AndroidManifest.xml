<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.munggoapp" >

    <uses-permission
        android:name="android.permission.INTERNET"
        android:protectionLevel="signature" />
    <uses-permission
        android:name="android.permission.ACCESS_WIFI_STATE"
        android:protectionLevel="signature" />
    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE"
        android:protectionLevel="signature" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MunggoApp"
        android:usesCleartextTraffic="true" >
        <activity
            android:name="com.example.mungoapp.signup.TutorialsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.mungoapp.signup.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.example.mungoapp.initial.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashScreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mungoapp.initial.LogActivity"
            android:exported="true"
            android:theme="@style/SplashScreenTheme" />
        <activity
            android:name="com.example.mungoapp.dashboard.HomeScreenActivity"
            android:exported="false"
            android:label="@string/title_activity_home_screen" />
    </application>

</manifest>